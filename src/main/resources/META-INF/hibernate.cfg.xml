<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
	<session-factory>
		<property name="connection.driver.class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/testdb</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>

		<mapping class="es.severo.persistence.entity.Tramite"/>
		<mapping class="es.severo.persistence.entity.Presupuesto"/>
		<mapping class="es.severo.persistence.entity.Libro"/>
		<mapping class="es.severo.persistence.entity.Capitulo"/>
		<mapping class="es.severo.persistence.entity.Persona"/>
		<mapping class="es.severo.persistence.entity.Direccion"/>
	</session-factory>
</hibernate-configuration>